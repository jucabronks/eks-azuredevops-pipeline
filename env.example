# =============================================================================
# CONFIGURAÇÕES MULTICLOUD - PROJETO VM
# =============================================================================

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1

# =============================================================================
# AZURE CONFIGURATION
# =============================================================================
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_LOCATION=eastus

# =============================================================================
# GCP CONFIGURATION
# =============================================================================
GOOGLE_PROJECT_ID=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account.json
GOOGLE_REGION=us-central1
GOOGLE_ZONE=us-central1-a

# =============================================================================
# TERRAFORM CONFIGURATION
# =============================================================================
TF_VAR_environment=dev
TF_VAR_project_name=projeto-vm
TF_VAR_terraform_cloud_organization=your_org_name
TF_VAR_terraform_cloud_workspace=projeto-vm-dev

# =============================================================================
# GITHUB CONFIGURATION
# =============================================================================
GITHUB_TOKEN=your_github_token
GITHUB_REPOSITORY=your-username/projeto-vm

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_VERSION=1.0.0
APP_PORT=8080
APP_REPLICAS=2

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ALERTMANAGER_ENABLED=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
ENCRYPTION_ENABLED=true
SSL_ENABLED=true
BACKUP_ENABLED=true 